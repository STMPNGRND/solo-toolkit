    <div class="mui--text-dark-secondary mui--text-display2">System settings</div>
  </div>
  <!--Main progress bar-->
    <div class="mui-col-sm-10 mui-col-md-10 mui-col-lg-10">
      <div class="progress log-collect-progress-bar">
        <div id="settings-progress-bar" class="determinate" style="width: 68%"></div>
      </div>
    </div>
  <!--container for settings table-->
  <div class="mui-col-sm-10 mui-col-md-10 mui-col-lg-10">
    <!-- Calibration Segment -->
    <legend>Calibration</legend>
    <div class="settings-table">
      <table class="mui-table settings-table">
          <tbody>
            <!--Pixhawk Param reset row-->
            <tr>
              <th><button id="accel-calibration-button" class="btn-primary mui-btn">Accel calibration</button></th>
              <th>
                <div class="">
                  <div class="action-description mui--text-subhead">Recalibrate the accelerometer on Solo</div>
                </div>
              </th>
            </tr>
            <!--Pixhaw reboot row-->
            <tr>
              <th><button id="stick-calibration-button" class="btn-primary mui-btn">Stick calibration</button></th>
              <th>
                <div class="settings-cell settings-description">
                  <div class="action-description mui--text-subhead">Initiate a stick calibration procedure on the Solo controller</div>
                </div>
              </th>
            </tr>
          </tbody>
      </table>
    </div>
      <!-- Pixhawk settings segment -->
      <legend>Pixhawk Settings</legend>
      <div class="settings-table">
        <table class="mui-table settings-table">
            <tbody>
              <!--Pixhawk Param reset row-->
              <tr>
                <th><button id="param-reset-button" class="btn-primary mui-btn">Param Reset</button></th>
                <th>
                  <div class="">
                    <div class="action-description mui--text-subhead">Reset all Pixhawk parameters.</div>
                  </div>
                </th>
              </tr>
              <!--Pixhaw reboot row-->
              <tr>
                <th><button id='reboot-button' class="btn-primary mui-btn">Reboot</button></th>
