      <div id="open-file-button-container" class="mui-col-sm-2 mui-col-md-2 mui-col-lg-2">
        <button id="open-file-button" class="btn-secondary mui-btn mui-btn--flat">choose</button>
      </div>

      <div class="settings-table">
        <table class="mui-table settings-table">
            <tbody>
              <!--Pixhawk Param reset row-->
              <tr>
                <th><button class="btn-primary mui-btn">Flash firmware</button></th>
                <th>
                  <div class="">
                    <div class="action-description mui--text-subhead">Flash selected firmware to Solo.</div>
                  </div>
                </th>
              </tr>
            </tbody>
        </table>
      </div>

    <!-- Motor arming segment-->
    <legend>Motor testing</legend>
    <div class="settings-table">
      <table class="mui-table settings-table">
          <tbody>
            <!--Pixhawk Param reset row-->
            <tr>
              <th><button class="btn-primary mui-btn">Arm motors</button></th>
